<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Student information"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            >
            <Button
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:visibility="invisible"/>

            <Button
                android:id="@+id/btnModifyStudent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modify" />

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:visibility="invisible"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            >
            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"/>
            <Button
                android:id="@+id/btnAddStu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add new Student" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:text="First Name"
                android:textColor="@color/colorPrimaryDark"

                android:textSize="12sp" />

            <EditText
                android:id="@+id/stuFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First Name"
                android:inputType="textPersonName"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="10sp"
                android:enabled="false"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:text="Last Name"
                android:textColor="@color/colorPrimaryDark"
                />
            <EditText
                android:id="@+id/stuLastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Last Name"
                android:inputType="textPersonName"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="10sp"
                android:enabled="false"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp">
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:text="Date of birth"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp"            />

            <EditText
                android:id="@+id/stuDOB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="YYYY-MM-DD"
                android:inputType="text"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="10sp"
                android:enabled="false"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:text="Address"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp"            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp">
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:text="Apt Number"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="10sp"            />

            <EditText
                android:id="@+id/aptNo"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:hint="Apt Number"
                android:inputType="textShortMessage"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="10sp"
                android:enabled="false"/>
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:text="Street Number"
                android:textAlignment="textEnd"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="10sp"            />

            <EditText
                android:id="@+id/strNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Street Number"
                android:inputType="number"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="10sp"
                android:enabled="false"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp">
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:text="Street"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="10sp"            />

            <EditText
                android:id="@+id/street"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:hint="Street Address"
                android:inputType="textShortMessage"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="10sp"
                android:enabled="false"/>
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:textAlignment="textEnd"
                android:text="City"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="10sp"            />

            <EditText
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="City"
                android:inputType="textShortMessage"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="10sp"
                android:enabled="false"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp">
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:text="Province"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="10sp"            />

            <Spinner
                android:id="@+id/prov"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:hint="Province"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="10sp"
                android:enabled="false"/>
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:textAlignment="textEnd"
                android:text="Postal Code"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="10sp"
                />

            <EditText
                android:id="@+id/postCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Postal Code"
                android:inputType="textShortMessage"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="10sp"
                android:enabled="false"/>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" android:padding="2dp">

            <Button
                android:id="@+id/btnAddContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contacts"
                android:textAllCaps="false"
                android:textSize="14dp"
                android:textStyle="" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="5dp" android:text="Parent/Guardian, people who have permission to pickup this child and two emergency contacts (other than parents/guardians)" android:textSize="12dp"/>
        </LinearLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="40dp" android:id="@+id/rlContacts">
            <ListView android:id="@+id/contactListView" android:layout_width="match_parent" android:layout_height="match_parent"/>
            <View android:id="@+id/customView" android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="@android:color/transparent"/>
        </RelativeLayout>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" android:padding="2dp">

            <Button
                android:id="@+id/btnAddNonAuthorized"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Non-Authorized Pickup"
                android:textAllCaps="false"
                android:textSize="12dp"
                android:textStyle="" />
            <TextView android:layout_width="wrap_content" android:layout_height="match_parent" android:padding="5dp" android:text="People who do not have permission to pickup this child" android:textSize="12dp"/>
        </LinearLayout>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="40dp" android:id="@+id/rlNonAuthorized">
            <ListView android:id="@+id/nonAuthorizedListView" android:layout_width="match_parent" android:layout_height="match_parent"/>
            <View android:id="@+id/customView1" android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="@android:color/transparent"/>
        </RelativeLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:padding="2dp">
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:text="Child's health record" android:textColor="@color/colorPrimaryDark" android:textSize="14dp"/>
        </LinearLayout>
        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/tbChildHealthRecord" android:layout_width="match_parent" android:layout_height="match_parent" android:stretchColumns="*">
            <!--  stretch the second column of the layout -->
            <!--  first row of the table layout -->
            <LinearLayout>
                android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:padding="1dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:text="ALLERGY ALERT" android:textAlignment="textStart" android:paddingRight="2dp" android:textColor="@color/colorPrimaryDark" android:textSize="12dp"/>
                <EditText android:id="@+id/txtAllergyAlert" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="List any serious allergies" android:inputType="textPersonName" android:textColor="@color/colorPrimaryDark" android:textSize="12dp"/>
            </LinearLayout>
            >
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:padding="1dp">
                <TextView android:layout_width="wrap_content" android:layout_height="match_parent" android:orientation="vertical" android:text="Are any of the above allergies severe enough to require Epipen, medications, or emergency treatment?" android:textAlignment="textStart" android:paddingRight="2dp" android:textSize="12dp"/>
            </LinearLayout>
            <RadioGroup android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/isEmergencyTreatment" android:textSize="12dp" android:onClick="onRadioButtonClicked" android:text="Yes"/>
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/isNotEmergencyTreatment" android:textSize="10dp" android:onClick="onRadioButtonClicked" android:text="No "/>
                <Button android:id="@+id/btnEmergencyPlane" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textAllCaps="false" android:textSize="12dp" android:paddingLeft="10dp" android:text="Complete Allergy Management and Emergency Plan"/>
            </RadioGroup>
            <LinearLayout>
                android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:padding="1dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:text="Other Allergies" android:textAlignment="textStart" android:paddingRight="2dp" android:textSize="12dp"/>
                <EditText android:id="@+id/txtOtherAllergies" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="List any food, medication or contact allergies (non-life threatening" android:inputType="textPersonName" android:textColor="@color/colorPrimaryDark" android:textSize="12dp"/>
            </LinearLayout>
            >
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:padding="1dp">
                <TextView android:layout_width="wrap_content" android:layout_height="match_parent" android:orientation="vertical" android:text="Does this child require any essential routine services on a regular basis as part of a daily routine such as, catheterization, special hygiene procedures, on-going administration of medication, or ongoing observation of certain health conditions, such as diabetes, to determine when intervention is needed?" android:textAlignment="textStart" android:textSize="12dp"/>
            </LinearLayout>
            <RadioGroup android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/isRoutineService" android:textSize="10dp" android:onClick="onRadioButtonClicked" android:text="Yes"/>
                <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/isNotRoutineService" android:onClick="onRadioButtonClicked" android:textSize="10dp" android:text="No "/>
                <Button android:id="@+id/btnEssentialRoutineServices" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textAllCaps="false" android:textSize="10dp" android:paddingLeft="10dp" android:text="Complete Essential Routine Services and Emergency Plan"/>
            </RadioGroup>
        </TableLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:padding="2dp">
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:text="Medical Practitioner" android:textColor="@color/colorPrimaryDark" android:textSize="12dp"/>
        </LinearLayout>
        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/tbPractitioner" android:layout_width="match_parent" android:layout_height="match_parent" android:stretchColumns="*">
            <!--  stretch the second column of the layout -->
            <!--  first row of the table layout -->
            <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:text="First Name" android:textAlignment="textEnd" android:paddingRight="2dp" android:textSize="12dp"/>
                <EditText android:id="@+id/txtPracFName" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="First Name" android:inputType="textPersonName" android:textColor="@color/colorPrimaryDark" android:textSize="12dp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:text="Last Name" android:textAlignment="textEnd" android:paddingRight="2dp" android:textSize="12dp"/>
                <EditText android:id="@+id/txtPracLName" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="Last Name" android:inputType="textPersonName" android:textSize="12dp"/>
            </TableRow>
            <TableRow android:id="@+id/firstRow" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:text="Phone Number" android:textAlignment="textEnd" android:paddingRight="2dp" android:textSize="12dp"/>
                <EditText android:id="@+id/txtPracPhone" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="Phone Number" android:inputType="phone" android:textColor="@color/colorPrimaryDark" android:textSize="12dp"/>
            </TableRow>
            <TableRow android:id="@+id/firstRow1" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <TextView android:layout_width="70dp" android:layout_height="wrap_content" android:orientation="vertical" android:text="Apt No." android:textAlignment="textEnd" android:paddingRight="2dp" android:textSize="12dp"/>
                <EditText android:id="@+id/txtPracAptNo" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="Apt No." android:inputType="textShortMessage" android:textSize="12dp"/>
                <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical" android:text="Street No." android:textAlignment="textEnd" android:paddingRight="2dp" android:textSize="12dp"/>
                <EditText android:id="@+id/txtPracStrNo" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="Street No." android:inputType="number" android:textSize="12dp"/>
            </TableRow>
            <TableRow android:layout_width="fill_parent" android:layout_height="wrap_content">
                <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical" android:text="Street" android:textAlignment="textEnd" android:paddingRight="2dp" android:textSize="12dp"/>
                <EditText android:id="@+id/txtPracStreet" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="Street" android:inputType="textShortMessage" android:textSize="12dp"/>
                <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical" android:textAlignment="textEnd" android:text="City" android:paddingRight="2dp" android:textSize="12dp"/>
                <EditText android:id="@+id/txtPracCity" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="City" android:inputType="textShortMessage" android:textSize="12dp"/>
            </TableRow>
            <TableRow android:id="@+id/firstRow2" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical" android:text="Province" android:textAlignment="textEnd" android:paddingRight="2dp" android:textSize="12dp"/>
                <Spinner android:id="@+id/spPracProv" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="Province" android:textSize="12dp"/>
                <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical" android:text="Postal Code" android:textAlignment="textEnd" android:paddingRight="2dp" android:textSize="12dp"/>
                <EditText android:id="@+id/txtPracPostCode" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="Postal Code" android:inputType="textShortMessage" android:textColor="@color/colorPrimaryDark" android:textSize="12dp"/>
            </TableRow>
        </TableLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:padding="1dp">
            <TextView android:layout_width="90dp" android:layout_height="match_parent" android:orientation="vertical" android:text="Medical History" android:textAlignment="textStart" android:textColor="@color/colorPrimaryDark" android:textSize="12sp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="match_parent" android:orientation="vertical" android:text="indicate if your child has HAD any of the following:" android:textAlignment="textStart" android:textSize="12dp"/>
        </LinearLayout>
        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/medicalHistory" android:layout_width="match_parent" android:layout_height="match_parent" android:stretchColumns="*">
            <!--  stretch the second column of the layout -->
            <!--  first row of the table layout -->
            <TableRow android:layout_width="fill_parent" android:layout_height="wrap_content">
                <CheckBox android:id="@+id/chkMeasles" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="12dp" android:onClick="onCheckboxClicked" android:text="Measles"/>
                <CheckBox android:id="@+id/chkMumps" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="12dp" android:onClick="onCheckboxClicked" android:text="Measles"/>
                <CheckBox android:id="@+id/chkMeningitis" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="12dp" android:onClick="onCheckboxClicked" android:text="Meningitis"/>
            </TableRow>
            <TableRow android:layout_width="fill_parent" android:layout_height="wrap_content">
                <CheckBox android:id="@+id/chkRubella" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="12dp" android:onClick="onCheckboxClicked" android:text="Rubella"/>
                <CheckBox android:id="@+id/chkChickenPox" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="12dp" android:onClick="onCheckboxClicked" android:text="Chicken Pox"/>
                <CheckBox android:id="@+id/chkPertussis" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="12dp" android:onClick="onCheckboxClicked" android:text="Pertussis (Whooping Cough)"/>
            </TableRow>
        </TableLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:padding="1dp">
            <TextView android:layout_width="90dp" android:layout_height="wrap_content" android:orientation="vertical" android:text="Health Status" android:textAlignment="textStart" android:textColor="@color/colorPrimaryDark" android:textSize="12dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:text="Indicate if your child HAS any of the following:" android:textAlignment="textStart" android:textSize="12dp"/>
        </LinearLayout>
        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/healthStatus" android:layout_width="match_parent" android:layout_height="wrap_content" android:stretchColumns="*">
            <!--  stretch the second column of the layout -->
            <!--  first row of the table layout -->
            <TableRow android:layout_width="fill_parent" android:layout_height="wrap_content">
                <CheckBox android:id="@+id/chkAsthma" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="12dp" android:onClick="onCheckboxClicked" android:text="Asthma"/>
                <CheckBox android:id="@+id/chkEczemaPsoriasis" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="12dp" android:onClick="onCheckboxClicked" android:text="Eczema/Psoriasis"/>
                <CheckBox android:id="@+id/chkDiabetes" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="12dp" android:onClick="onCheckboxClicked" android:text="Diabetes"/>
                <CheckBox android:id="@+id/chkEpilepsySeizures" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="12dp" android:onClick="onCheckboxClicked" android:text="Epilepsy/Seizures"/>
            </TableRow>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:padding="1dp">
                android:layout_width="fill_parent" android:layout_height="wrap_content">
                <TextView android:layout_width="70dp" android:layout_height="wrap_content" android:orientation="vertical" android:text="Other" android:textAlignment="textStart" android:textSize="12dp"/>
                <EditText android:id="@+id/txthealthStatusOther1" android:layout_width="fill_parent" android:layout_height="wrap_content" android:inputType="text" android:textSize="12dp"/>
            </LinearLayout>
            >
        </TableLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:padding="1dp">
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:text="Ongoing Medical Treatment" android:textAlignment="textStart" android:textColor="@color/colorPrimaryDark" android:textSize="12dp"/>
        </LinearLayout>
        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/ongoingMedicalTreatment" android:layout_width="match_parent" android:layout_height="wrap_content" android:stretchColumns="*">
            <!--  stretch the second column of the layout -->
            <!--  first row of the table layout -->
            <TableRow android:layout_width="fill_parent" android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:text="Name of medication" android:textAlignment="textStart" android:textSize="12dp"/>
                <EditText android:id="@+id/txtmedication1" android:layout_width="fill_parent" android:layout_height="wrap_content" android:inputType="text" android:textSize="12dp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:text="Dosage" android:textAlignment="textStart" android:textSize="12dp"/>
